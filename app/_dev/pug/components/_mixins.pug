mixin head()
	title #{pageTitle}
	meta(charset="UTF-8")
	meta(http-equiv="X-UA-Compatible", content="IE=edge")
	meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")

	link(rel="apple-touch-icon", sizes="180x180", href="./img/favicon/apple-touch-icon.png")
	link(rel="icon", type="image/png", sizes="32x32", href="./img/favicon/favicon-32x32.png")
	link(rel="icon", type="image/png", sizes="16x16", href="./img/favicon/favicon-16x16.png")
	link(rel="manifest", href="./img/favicon/site.webmanifest")
	link(rel="mask-icon", href="./img/favicon/safari-pinned-tab.svg", color="#2474eb")
	link(rel="shortcut icon", href="./img/favicon/favicon.ico")
	meta(name="msapplication-TileColor", content="#2474eb")
	meta(name="msapplication-config", content="./img/favicon/browserconfig.xml")
	meta(name="theme-color", content="#2474eb")

	link(rel="stylesheet", href="./css/style.min.css?4")

	//- Global site tag (gtag.js) - Google Analytics
	script(async src="https://www.googletagmanager.com/gtag/js?id=G-34KZMZ6Y98")
	script.
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', 'G-34KZMZ6Y98');

mixin scripts()
	script(src="./js/scripts.min.js?4")

mixin nav-li(href, title, isActive)
	li: a(class=isActive ? 'active' : '', href=href) #{title}


mixin svg(w, h, img)
	svg(viewBox=`0 0 ${w} ${h}`, width=`${w}px`)
		use(xlink:href=`./img/sprite.svg#${img}`)











